{
  "root": true,
  "extends": "next",
  "rules": {
    "react/no-unknown-property": [
      2,
      {
        "ignore": ["jsx", "global"]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "react/display-name": 0
  }
}
